datasource db {
  provider = "postgresql"
  url = "***"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id Int @default(autoincrement()) @id
  firstName String
  lastName String
  userName String
  password String
  messages Message[]
}

model Message {
  id Int @default(autoincrement()) @id
  text String
  user User @relation(fields: [userId], references: [id])
  userId Int
}